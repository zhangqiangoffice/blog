<%- include('header') -%>

<% if (contents.length === 0) { %>
<div class="list_box"><h2>目前该分类下还没有文章</h2></div>
<% } %>

<% for (var i = 0; i < contents.length; i++) { %>
<div class="list_box">
  <h1><%= contents[i].title %></h1>
  <p class="col_default">
    作者：<span><%= contents[i].author && contents[i].author.username %></span> -
    时间：<span><%= formatDate(contents[i].addTime) %></span> -
    阅读：<span><%= contents[i].views %></span> -
    评论：<span><%= contents[i].comments.length %></span>
  </p>
  <p><%= contents[i].description %></p>
  <div class="function"><a href="/view?contentid=<%= contents[i].id %>" class="more-btn waves-btn">阅读全文</a></div>
</div>
<% } %>

<ul class="pager">
  <li class="previous">
    <% if (page <= 1) { %>
    <span>没有上一页了</span>
    <% } else { %>
    <a href="/?category=<%= category %>&page=<%= page - 1 %>">上一页</a>
    <% } %>
  </li>

  <li class="num">
    <% if (pages > 0) { %>
      <%= page %> / <%= pages %>
    <% } %>
  </li>
  <li class="next">
    <% if (page >= pages) { %>
    <span>没有下一页了</span>
    <% } else { %>
    <a href="/?category=<%= category %>&page=<%= page + 1 %>">下一页</a>
    <% } %>
  </li>
</ul>

<%- include('footer') -%>
